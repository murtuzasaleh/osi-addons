<odoo>
    <record model="ir.ui.view" id="view_order_form_remove_button">
        <field name="name">payment method form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="payment_authorize_addcard.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='payment_url_sale']" position="replace">
            </xpath>
        </field>
    </record>
    
    <record model="ir.ui.view" id="view_order_form">
        <field name="name">payment method form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button name="osi_add_credit_card.action_add_credit_card_token" type="action" string="Add Partner Credit Card"
                    class="oe_stat_button" icon="fa-credit-card" context="{'default_partner_id': partner_invoice_id}">
                </button>
            </xpath>
        </field>
    </record>
</odoo>
