<odoo>
    
    <record id="view_account_payment_invoice_form_inherit_payment_ippay" model="ir.ui.view">
        <field name="name">view.account.payment.invoice.form.inherit.payment.ippay</field>
        <field name="model">account.register.payments</field>
        <field name="inherit_id" ref="account.view_account_payment_from_invoices"/>
        <field name="arch" type="xml">
            <field name="journal_id" position="after">
                <field name="payment_token_id" options="{'no_create': True}"
                    attrs="{'invisible': [('payment_method_code', '!=', 'electronic')],
                            'required': [('payment_method_code', '=', 'electronic')]}"/>
            </field>
        </field>
    </record>
    <record id='acquirer_form_ippay' model='ir.ui.view'>
        <field name='name'>acquirer.form.ippay></field>
        <field name='model'>payment.acquirer</field>
        <field name='inherit_id' ref='payment.acquirer_form'/>
        <field name='arch' type='xml'>
            <xpath expr="//notebook" position="inside">
                <page name="prismpay_config" string="IPpayay Config" attrs="{'invisible': [('provider', '!=', 'ippay')]}">
                    <group>
                        <group>
                            <field name='api_url' widget="url"/>
                            <field name='ippay_terminal_id'/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
